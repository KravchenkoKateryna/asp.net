@model JobPortal.Models.ViewModels.VacanciesListViewModel

@{
    ViewData["Title"] = "Вакансії";
}

<div class="row">
    @foreach (var v in Model.Vacancies)
    {
        <partial name="_VacancySummary" model="v" />
    }
</div>

<!-- 🔹 Пейджинг -->
<nav aria-label="Навігація сторінками">
    <ul class="pagination justify-content-center mt-4">
        @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-location="@Model.CurrentLocation">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
